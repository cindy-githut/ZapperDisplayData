<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:baselineAligned="false">

<fragment
    android:layout_width="0dp"
    android:layout_height="match_parent"
    class="habbitatvalley.com.zapperdisplaydata.fragments.MasterFragment"
    android:id="@+id/names_fragment"
    android:layout_weight="1"
    tools:layout="@layout/fragment_master" />

<fragment
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:name="habbitatvalley.com.zapperdisplaydata.fragments.DetailFragment"
    android:id="@+id/details_fragment"
    android:layout_weight="2"
    tools:layout="@layout/fragment_detail"/>

</LinearLayout>